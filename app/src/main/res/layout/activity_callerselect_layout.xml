<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_bg"
    android:orientation="vertical"
    android:weightSum="9" >

    <include layout="@layout/header_logo_layout" />

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/select_contact"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/contacts" />

        <EditText
            android:id="@+id/set_caller_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/select_contact"
            android:background="@drawable/feedback_edit_bg"
            android:hint="@string/callernumber_ringgroup_setcallername"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/input_text"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/set_caller_number"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/feedback_edit_bg"
            android:hint="@string/callernumber_ringgroup_setcallernumber"
            android:paddingBottom="13dp"
            android:paddingLeft="10dp"
             android:numeric="integer"   
            android:paddingRight="10dp"
            android:paddingTop="13dp"
            android:singleLine="true"
            android:textColor="@color/text_color_black"
            android:textColorHint="@color/input_text"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>